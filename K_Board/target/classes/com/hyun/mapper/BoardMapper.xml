<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hyun.mapper.BoardMapper">

	<!-- # 게시물 등록 -->
	<insert id="enroll">
		insert into SPRING_BOARD(bno,title,content,writer)
		values (seq_board.nextval,#{title},#{content},#{writer})
	</insert>
	
	<!-- # 게시판 목록 페이지 -->
	<select id="getList" resultType="com.hyun.domain.BoardVO">
		SELECT * FROM SPRING_BOARD
	</select>
	
	<!-- # 게시판 조회 페이지 -->
	<select id="getPage" resultType="com.hyun.domain.BoardVO">
		SELECT * FROM SPRING_BOARD WHERE BNO = #{BNO}
	</select>
	
	<!-- # 게시물 수정 -->
	<update id="modify">
		UPDATE SPRING_BOARD 
		SET	title = #{title}, content = #{content}, updatedate = sysdate
		WHERE bno = #{bno} 
	</update>
	
	<!-- # 게시물 삭제 -->
	<delete id="delete">
		DELETE FROM SPRING_BOARD
		WHERE bno = #{bno}
	</delete>
	
</mapper>